<UserControl
	x:Class="OWGoldenGuns.HeroCard"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:OWGoldenGuns"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Width="107"
	Height="178"
	MinWidth="107"
	MinHeight="178"
	IsEnabled="False"
	IsEnabledChanged="UserControl_IsEnabledChanged"
	MouseDown="UserControl_MouseDown"
	MouseEnter="UserControl_MouseEnter"
	MouseLeave="UserControl_MouseLeave"
	mc:Ignorable="d">
	<Grid>
		<Border
			x:Name="b_card_background"
			Margin="2"
			Background="#FFCAC5E2"
			BorderBrush="#FFE4E3E8"
			BorderThickness="2">
			<Grid>
				<Image x:Name="i_hero_image" Source="Icons/Ana.png" />
				<Border
					x:Name="b_name_bg"
					Height="53"
					VerticalAlignment="Bottom"
					Background="#7FE4E3E8"
					BorderThickness="0">
					<TextBlock
						x:Name="tb_hero_name"
						Width="103"
						Margin="-4,0,0,0"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						FontFamily="/GoldenGuns;component/#BigNoodleTooOblique"
						FontSize="24"
						Text="Wreooooooo ry rty ngBall ASAD super"
						TextAlignment="Center"
						TextWrapping="Wrap" />

				</Border>
			</Grid>
		</Border>

	</Grid>
</UserControl>
