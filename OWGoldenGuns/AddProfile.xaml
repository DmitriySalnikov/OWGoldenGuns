<Window
	x:Class="OWGoldenGuns.AddProfile"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:OWGoldenGuns"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Add Profile"
	Width="406"
	Height="140"
	MinWidth="406"
	MinHeight="140"
	Icon="icon.png"
	ResizeMode="NoResize"
	WindowStyle="ToolWindow"
	mc:Ignorable="d">
	<Grid>
		<Label
			x:Name="l_profile_name"
			Margin="10,10,10,0"
			VerticalAlignment="Top"
			Content="New profile name:" />
		<TextBox
			x:Name="tb_name"
			Height="23"
			Margin="10,41,10,0"
			VerticalAlignment="Top"
			MaxLength="32"
			MaxLines="1"
			MinLines="1"
			Text="Default"
			TextChanged="TextBox_TextChanged"
			TextWrapping="Wrap" />
		<Button
			x:Name="btn_ok"
			Height="20"
			Margin="10,0,10,10"
			VerticalAlignment="Bottom"
			Click="Button_Click"
			Content="Add Profile" />

	</Grid>
</Window>
