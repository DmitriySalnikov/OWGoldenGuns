<Window
	x:Class="OWGoldenGuns.LanguageSelect"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:OWGoldenGuns"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Select Language"
	Width="421.253"
	Height="366"
	MinWidth="282"
	Icon="icon.png"
	mc:Ignorable="d">
	<Grid>
		<ListBox
			x:Name="lb_languages"
			Margin="10,30,10,35"
			SelectionChanged="lb_languages_SelectionChanged" />
		<Button
			x:Name="btn_accept"
			Height="20"
			Margin="10,0,10,10"
			VerticalAlignment="Bottom"
			Click="btn_accept_Click"
			Content="Apply" />
		<CheckBox
			x:Name="cb_show_only_available"
			Margin="10,10,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Click="cb_show_only_available_Click"
			Content="Show only available locales"
			IsChecked="True" />
	</Grid>
</Window>
